# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# Application Configuration
API_V1_STR=/api/v1
PROJECT_NAME=TrigpointingUK API
DEBUG=false
# AWS X-Ray
XRAY_ENABLED=false
XRAY_SERVICE_NAME=trigpointing-api-staging
# If running with the X-Ray daemon sidecar on ECS/Fargate, leave default
# Otherwise set host:port such as 127.0.0.1:2000
XRAY_DAEMON_ADDRESS=127.0.0.1:2000
# Sampling rate is controlled by rules, but enabling sampling here toggles it on/off
# Keep existing numeric variable for backwards compat if present; code uses boolean
XRAY_SAMPLING_RATE=0.1

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_SECRET_NAME=your-auth0-secret-name
AUTH0_CONNECTION=Username-Password-Authentication

# Auth0 Audience Configuration
# These are separate audiences for different purposes:
# - MANAGEMENT_API_AUDIENCE: For accessing Auth0 Management API (user sync, etc.)
#   This should match the audience configured in your Auth0 Management API application
# - API_AUDIENCE: For validating tokens from your API clients
#   This should match the audience configured in your Auth0 API
AUTH0_MANAGEMENT_API_AUDIENCE=https://your-domain.auth0.com/api/v2/
AUTH0_API_AUDIENCE=https://your-api-domain.com/api/v1/
