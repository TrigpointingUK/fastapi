# Production Environment Configuration Example
# Copy this to terraform.tfvars and fill in the values
# DO NOT COMMIT terraform.tfvars - it contains secrets!

# AWS Configuration
aws_region = "eu-west-1"
environment = "production"
project_name = "trigpointing"

# Container Configuration
container_image = "YOUR_ECR_REPO_URL:production-latest"
cpu = 2048
memory = 4096
desired_count = 2
min_capacity = 2
max_capacity = 10

# SSL Configuration
enable_cloudflare_ssl = true
cloudflare_origin_cert = "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----"
cloudflare_origin_key = "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Domain
domain_name = "api.trigpointing.uk"

# Auth0 Configuration
# These credentials are for the Terraform provider M2M application
auth0_domain = "trigpointing-prod.eu.auth0.com"
auth0_client_id = "YOUR_TERRAFORM_M2M_CLIENT_ID"
auth0_client_secret = "YOUR_TERRAFORM_M2M_CLIENT_SECRET"

# This token is used by the post-registration Action
# After first terraform apply, generate this using the created M2M client
auth0_m2m_token = "YOUR_M2M_TOKEN_FOR_WEBHOOK"

# Application Configuration
log_level = "INFO"
cors_origins = ["https://www.trigpointing.uk"]
db_pool_size = 20
db_pool_recycle = 300
profiling_enabled = false
profiling_default_format = "html"

